{
    "name": "kevinpapst/tabler-bundle-demo",
    "license": "MIT",
    "type": "project",
    "description": "Demo application to showcase the Tabler Bundle",
    "require": {
        "php": "^8.0 || ^8.1",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-sqlite3": "*",
        "doctrine/common": "^3.2.0",
        "doctrine/doctrine-bundle": "^2.5.2",
        "doctrine/orm": "^2.10",
        "composer/package-versions-deprecated": "^1.11.99",
        "kevinpapst/tabler-bundle": "dev-main",
        "knplabs/knp-menu-bundle": "^3.0",
        "symfony/asset": ">= 6.1",
        "symfony/console": ">= 6.1",
        "symfony/dotenv": ">= 6.1",
        "symfony/flex": "^2.0",
        "symfony/form": ">= 6.1",
        "symfony/framework-bundle": ">= 6.1",
        "symfony/intl": ">= 6.1",
        "symfony/password-hasher": "^6.1",
        "symfony/security-bundle": ">= 6.1",
        "symfony/stopwatch": ">= 6.1",
        "symfony/translation": ">= 6.1",
        "symfony/twig-bundle": ">= 6.1",
        "erusev/parsedown": "^1.7",

        "symfony/runtime": "6.*",
        "symfony/validator": "6.*",
        "symfony/webpack-encore-bundle": "^2.0.1",
        "symfony/yaml": ">= 6.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^1.2",
        "rector/rector": "^0.18.4",
        "symfony/debug-bundle": ">= 6.1",
        "symfony/web-profiler-bundle": ">= 6.1"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,

    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "linting": [
            "bin/console lint:yaml config --parse-tags",
            "bin/console lint:twig templates --show-deprecations",
            "bin/console lint:xliff translations"
        ],
        "phpstan": [
            "vendor/bin/phpstan analyse src/ --level=5"
        ],
        "codestyle": "vendor/bin/php-cs-fixer fix --dry-run --verbose --show-progress=none",
        "codestyle-fix": "vendor/bin/php-cs-fixer fix"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "^6.4"
        }
    }
}
